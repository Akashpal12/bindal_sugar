<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/SrNo"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Sr No."
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/supervisor_code_name"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="40dp"
                android:layout_margin=".5dp"
                android:paddingStart="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="Grower Village"
                android:textColor="@color/black"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/plot_vilage_code_name"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="40dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="Grower Name"
                android:textColor="@color/black"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/plot_no"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="40dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/gis_leads"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="40dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/result"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="40dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/final_result"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="40dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/done"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="40dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <RelativeLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/details_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/remedialreport"/>
                <TextView
                    android:id="@+id/details_txt"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin=".5dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="Details"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>




        </LinearLayout>








    </LinearLayout>

</LinearLayout>