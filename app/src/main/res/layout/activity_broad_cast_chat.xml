<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sheet"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    app:alignContent="flex_start"
                    app:alignItems="flex_start"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/cv_wtpdwtpr"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_gravity="left|top"
                            android:layout_weight=".3"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:clickable="true"
                                    android:onClick="document"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/document_bg" />

                                <TextView
                                    android:id="@+id/txt_wtpdwtpr"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_black"
                                    android:gravity="center"
                                    android:text="Document"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/acc_details"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_gravity="left|top"
                            android:layout_weight=".3"
                            android:clickable="true"
                            android:onClick="openaccountdetail"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:clickable="true"
                                    android:onClick="openRecorder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/camera_bg"
                                    />

                                <TextView
                                    android:id="@+id/txt_wtpswtpr"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_black"
                                    android:gravity="center"
                                    android:text="Record Video"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/cv_rptcpr"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_gravity="left|top"
                            android:layout_weight=".3"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:clickable="true"
                                    android:onClick="opengallery"
                                    android:id="@+id/img_gallery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/gallery_bg"
                                    />

                                <TextView
                                    android:id="@+id/txt_gallery"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_black"
                                    android:gravity="center"
                                    android:text="Gallery"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/cv_rpthcr"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_gravity="left|top"
                            android:layout_weight=".3"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:onClick="openlocation"
                                    android:background="@drawable/location_bg" />

                                <TextView
                                    android:id="@+id/txt_rpthcr"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_black"
                                    android:gravity="center"
                                    android:text="Location"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/cv_rpthcre"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_gravity="left|top"
                            android:layout_weight=".3"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:onClick="openVideoGallery"
                                    android:background="@drawable/music_bg" />

                                <TextView
                                    android:id="@+id/txt_rpthcrw"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_black"
                                    android:gravity="center"
                                    android:text="Video "
                                    android:textColor="@color/colorAccent"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cv_weieght"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_gravity="left|top"
                            android:layout_weight=".3"
                            android:clickable="true"
                            android:onClick="openweightmentdetails"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="5dp"

                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/contact"
                                    android:clickable="true"
                                    android:onClick="contact"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/contact_bg" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto_black"
                                    android:gravity="center"
                                    android:text="Cantact"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>





                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </ScrollView></RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>