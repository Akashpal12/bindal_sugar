<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    app:cardCornerRadius="5sp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:paddingBottom="5sp">

        <RelativeLayout
            android:id="@+id/rlLayoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="7sp">

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text=""
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_grower_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvCount"
                android:paddingLeft="6dp"
                android:text=""
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_black"
                android:src="@drawable/ic_baseline_edit_white_24" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlLayoutHeader"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/rLayoutLine2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        >

                        <TextView
                            android:id="@+id/tvfathername"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:textColor="@color/black"
                            android:text="Father Name"
                            android:fontFamily="@font/roboto_black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_father_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:paddingLeft="3dp"
                            android:fontFamily="@font/roboto_black"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rLayoutLine3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rLayoutLine2"
                        android:padding="5dp"
                        >

                        <TextView
                            android:id="@+id/tvplotvillage"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_black"
                            android:text="Plot Village"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_plot_village"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tvplotvillage"
                            android:paddingLeft="3dp"
                            android:text=""
                            android:fontFamily="@font/roboto_black"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rLayoutLine4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rLayoutLine3"
                        android:padding="5dp"
                        >

                        <TextView
                            android:id="@+id/tvgrowervillage"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Grower Village"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_grower_village"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tvgrowervillage"
                            android:paddingLeft="3dp"
                            android:fontFamily="@font/roboto_black"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rLayoutLine4_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rLayoutLine3"
                        android:padding="5dp"
                        >

                        <TextView
                            android:id="@+id/tvvariety"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Variety"
                            android:fontFamily="@font/roboto_black"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_variety_group1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tvvariety"
                            android:paddingLeft="3dp"
                            android:text=""
                            android:fontFamily="@font/roboto_black"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/logo"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/rLayoutLine5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rLayoutLine4"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_weight=".5"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/tv_variety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:fontFamily="@font/calibri"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_weight=".5"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/tv_cane_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:fontFamily="@font/calibri"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rLayoutLine6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rLayoutLine5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_weight=".5"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/tv_cane_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="3dp"
                        android:text=""
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_supervisor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="3dp"
                        android:fontFamily="@font/calibri"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rLayoutLine5"
                android:padding="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_crop_condition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="3dp"
                    android:text=""
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_disease"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="3dp"
                    android:fontFamily="@font/calibri"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rLayoutLine5"
                android:padding="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_irrigation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="3dp"
                    android:fontFamily="@font/calibri"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="3dp"
                    android:fontFamily="@font/calibri"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rLayoutLine5"
                android:padding="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_variety_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text=""
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rLayoutLine5"
                android:padding="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text=""
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>