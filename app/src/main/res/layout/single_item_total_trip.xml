                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rLayoutLine3"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/tvcourse"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Start Location : "
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvcourse"
                    android:paddingLeft="3dp"
                    android:text="Center"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayoutLine5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rLayoutLine4"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="End Location : "
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvstatus"
                    android:paddingLeft="3dp"
                    android:text="Factory 1"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayoutLine6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rLayoutLine5"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/tvexpiry"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Total Distance/Time"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_expiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvexpiry"
                    android:paddingLeft="3dp"
                    android:text="25 Km / 53 Minute"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


