<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0sp"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/rl_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center_vertical"
        android:background="#DFDFDF"
        android:paddingBottom="0sp">



        <RelativeLayout
            android:id="@+id/rl_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/village"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/grower"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/village"
                android:fontFamily="@font/calibri"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/grower_father"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/grower"
                android:fontFamily="@font/calibri"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/variety"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/grower_father"
                android:gravity="left"
                android:fontFamily="@font/calibri"
                android:textColor="@color/black"
                android:text=""
                android:textSize="15dp" />

            <TextView
                android:id="@+id/gps_area"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/variety"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/calibri"
                android:textColor="@color/black"
                android:text=""
                android:textSize="15dp" />

            <TextView
                android:id="@+id/manual_area"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gps_area"
                android:gravity="left"
                android:fontFamily="@font/calibri"
                android:textColor="@color/black"
                android:text=""
                android:textSize="15dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/manual_area"
                android:gravity="right"
                android:fontFamily="@font/calibri"
                android:textColor="@color/black"
                android:text=""
                android:textSize="15dp" />


        </RelativeLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>