<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".view.MainActivity"
        tools:showIn="@layout/activity_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_plot_sr_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_plot_sr_no"
                            android:layout_width="match_parent"
                            android:text="Plot Sr No"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/plot_sr_no"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="none"
                            android:focusable="false"
                            android:editable="false"
                            android:layout_below="@+id/t_plot_sr_no"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_khashra_number"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_plot_sr_no"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_khashra_number"
                            android:layout_width="match_parent"
                            android:text="Khashra Number"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/khashra_number"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_khashra_number"
                            android:hint=""
                            android:textColorHint="#000"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_gata_number"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_khashra_number"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_gata_number"
                            android:layout_width="match_parent"
                            android:text="Gata Number"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/gata_number"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_gata_number"
                            android:hint=""
                            android:textColorHint="#000"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_village"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_gata_number"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_village"
                            android:layout_width="match_parent"
                            android:text="Village"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/village_code"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_village"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_coordinate"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_village"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_corner_0_name"
                            android:layout_width="50dp"
                            android:text="Corner"
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_0_lat"
                            android:layout_width="100dp"
                            android:text="Lattitude"
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_toRightOf="@+id/t_corner_0_name"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_0_lng"
                            android:layout_width="100dp"
                            android:text="Longitude"
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_toRightOf="@+id/t_corner_0_lat"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_0_distance"
                            android:layout_width="50dp"
                            android:text="Dist"
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_toRightOf="@+id/t_corner_0_lng"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_0_accuracy"
                            android:layout_width="match_parent"
                            android:text="Accur."
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_toRightOf="@+id/t_corner_0_distance"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_coordinate_1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_coordinate"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_corner_1_name"
                            android:layout_width="50dp"
                            android:text="East"
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_1_lat"
                            android:layout_width="100dp"
                            android:text=""
                            android:layout_toRightOf="@+id/t_corner_1_name"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_1_lng"
                            android:layout_width="100dp"
                            android:text=""
                            android:layout_toRightOf="@+id/t_corner_1_lat"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_1_distance"
                            android:layout_width="50dp"
                            android:text=""
                            android:gravity="right"
                            android:layout_toRightOf="@+id/t_corner_1_lng"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_1_accuracy"
                            android:layout_width="match_parent"
                            android:text=""
                            android:gravity="right"
                            android:layout_toRightOf="@+id/t_corner_1_distance"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_coordinate_2"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_coordinate_1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_corner_2_name"
                            android:layout_width="50dp"
                            android:text="South"
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_2_lat"
                            android:layout_width="100dp"
                            android:text=""
                            android:layout_toRightOf="@+id/t_corner_2_name"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_2_lng"
                            android:layout_width="100dp"
                            android:text=""
                            android:layout_toRightOf="@+id/t_corner_2_lat"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_2_distance"
                            android:layout_width="50dp"
                            android:text=""
                            android:gravity="right"
                            android:layout_toRightOf="@+id/t_corner_2_lng"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_2_accuracy"
                            android:layout_width="match_parent"
                            android:text=""
                            android:gravity="right"
                            android:layout_toRightOf="@+id/t_corner_2_distance"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_coordinate_3"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_coordinate_2"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_corner_3_name"
                            android:layout_width="50dp"
                            android:text="West"
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_3_lat"
                            android:layout_width="100dp"
                            android:text=""
                            android:layout_toRightOf="@+id/t_corner_3_name"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_3_lng"
                            android:layout_width="100dp"
                            android:text=""
                            android:layout_toRightOf="@+id/t_corner_3_lat"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_3_distance"
                            android:layout_width="50dp"
                            android:text=""
                            android:gravity="right"
                            android:layout_toRightOf="@+id/t_corner_3_lng"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_3_accuracy"
                            android:layout_width="match_parent"
                            android:text=""
                            android:gravity="right"
                            android:layout_toRightOf="@+id/t_corner_3_distance"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_coordinate_4"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_coordinate_3"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_corner_4_name"
                            android:layout_width="50dp"
                            android:text="North"
                            android:background="@color/coordinate"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_4_lat"
                            android:layout_width="100dp"
                            android:text=""
                            android:layout_toRightOf="@+id/t_corner_4_name"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_4_lng"
                            android:layout_width="100dp"
                            android:text=""
                            android:layout_toRightOf="@+id/t_corner_4_lat"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_4_distance"
                            android:layout_width="50dp"
                            android:text=""
                            android:gravity="right"
                            android:layout_toRightOf="@+id/t_corner_4_lng"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_corner_4_accuracy"
                            android:layout_width="match_parent"
                            android:text=""
                            android:gravity="right"
                            android:layout_toRightOf="@+id/t_corner_4_distance"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_master_coordinate"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@color/coordinate"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_coordinate_4"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_master_latlng"
                            android:layout_width="match_parent"
                            android:text=""
                            android:padding="5dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/t_master_acc"
                            android:layout_width="match_parent"
                            android:text=""
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="9dp"
                            android:layout_below="@+id/t_master_latlng"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/rl_capture_coordinate"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_master_coordinate"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/capture_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="0.03"
                            android:background="#8BC34A"
                            android:clickable="true"
                            android:onClick="captureCoordinate"
                            android:text="Capture Location"
                            android:textColor="@android:color/background_light"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.03"
                            android:background="#9C27B0"
                            android:layout_margin="5dp"
                            android:text="View On Map"
                            android:clickable="true"
                            android:onClick="mapViewPlot"
                            android:textColor="@android:color/background_light"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.03"
                            android:background="#FF5722"
                            android:layout_margin="5dp"
                            android:text="Reset Location"
                            android:clickable="true"
                            android:onClick="clearCoordinate"
                            android:textColor="@android:color/background_light"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_area"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_capture_coordinate"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_area"
                            android:layout_width="match_parent"
                            android:text="Area"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/area_meter"
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="none"
                            android:focusable="false"
                            android:editable="false"
                            android:layout_below="@+id/t_area"
                            android:hint="Meter"
                            android:textColorHint="#949494"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/area_hec"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="none"
                            android:focusable="false"
                            android:editable="false"
                            android:layout_below="@+id/t_area"
                            android:layout_toRightOf="@+id/area_meter"
                            android:hint="Hectare"
                            android:textColorHint="#949494"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_variety"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_area"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_variety"
                            android:layout_width="match_parent"
                            android:text="Variety"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/variety"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_variety"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_cane_type"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_variety"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_cane_type"
                            android:layout_width="match_parent"
                            android:text="Cane Type"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/cane_type"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_cane_type"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_mix_crop"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_cane_type"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_mix_crop"
                            android:layout_width="match_parent"
                            android:text="Mix Crop"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:id="@+id/mix_crop"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_mix_crop"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_insect"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_mix_crop"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_insect"
                            android:layout_width="match_parent"
                            android:text="Insect"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:id="@+id/insect"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_insect"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_seed_source"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_insect"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_seed_source"
                            android:layout_width="match_parent"
                            android:text="Seed Source"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/seed_source"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_seed_source"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_plant_method"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_seed_source"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_plant_method"
                            android:layout_width="match_parent"
                            android:text="Plant Method"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/plant_method"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_plant_method"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_crop_condition"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_plant_method"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_crop_condition"
                            android:layout_width="match_parent"
                            android:text="Crop Condition"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/crop_condition"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_crop_condition"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_disease"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_crop_condition"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_disease"
                            android:layout_width="match_parent"
                            android:text="Disease"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/disease"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_disease"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/rl_irrigation"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_disease"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_irrigation"
                            android:layout_width="match_parent"
                            android:text="Irrigation"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/irrigation"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_irrigation"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_soil_type"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@+id/rl_irrigation"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/t_soil_type"
                            android:layout_width="match_parent"
                            android:text="Soil Type"
                            android:layout_height="wrap_content" />

                        <AutoCompleteTextView
                            android:id="@+id/soil_type"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#000"
                            android:inputType="number"
                            android:layout_below="@+id/t_soil_type"
                            android:hint=""
                            android:textColorHint="#949494"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_land_type"
                        android:layout_width="match_parent"
