<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:id="@+id/main_layout"
    android:layout_margin="3dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/all_heading"
        android:background="#DAECD3"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            android:backgroundTint="#498C2F">
            <TextView
                android:id="@+id/SuperVisorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:text="Grower Name"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/all_details"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Reason"/>
            <TextView
                android:id="@+id/Desription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Description"/>
            <TextView
                android:id="@+id/From_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="From Date"/>
            <TextView
                android:id="@+id/To_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="To Date"/>
        </LinearLayout>

            <EditText
                android:id="@+id/remarks_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_border_akash"
                android:paddingStart="8dp"
                android:fontFamily="@font/calibri"
                android:hint="Remarks"
                android:paddingVertical="5dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="textCapWords" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/all_request"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/lining"
                android:id="@+id/Approved"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="#2A8507"
                    android:layout_height="wrap_content"
                    android:text="Approved"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/Approved"
                android:layout_marginStart="40dp"
                android:id="@+id/Reject"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/lining"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="@dimen/_25sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="#9A0E0E"
                    android:layout_height="wrap_content"
                    android:text="Reject"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>