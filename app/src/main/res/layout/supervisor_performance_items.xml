<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/SrNo"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Sr No."
                android:textColor="@color/black"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/plot_vill_Name"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="30dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="Plot Village Code/ Name"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/tottal_plots"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Total Plots"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/total_area"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Total Area"
                android:textColor="@color/black"
                 />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/plots_covered"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Plots Covered"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/percet_coverage"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="GH No"
                android:textColor="@color/black"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/area_coverage"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Grower Village"
                android:textColor="@color/black"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/coverage_area"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin=".5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Grower Village Name"
                android:textColor="@color/black"
                />
        </LinearLayout>







    </LinearLayout>

</LinearLayout>