<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDD8CD"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:text="Menu"
                android:textSize="30dp"
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/dashboard_card_elevation">

                    <RelativeLayout
                        android:id="@+id/plot_activity"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        >

                        <ImageView
                            android:id="@+id/img_about"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/plotidentification" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_about"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Plot Activity"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/dashboard_card_elevation">

                    <RelativeLayout
                        android:id="@+id/verital_check"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        >

                        <ImageView
                            android:id="@+id/img_verital_check"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/veritalcheck" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_verital_check"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Verital Check"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/dashboard_card_elevation">

                    <RelativeLayout
                        android:id="@+id/crop_observation"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        >

                        <ImageView
                            android:id="@+id/img_crop_observation"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/crop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_crop_observation"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Crop Observation"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/dashboard_card_elevation">

                    <RelativeLayout
                        android:id="@+id/soil_testing"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        >

                        <ImageView
                            android:id="@+id/img_soil_testing"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/soiltest" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_soil_testing"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Soil Sample"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/dashboard_card_elevation">

                    <RelativeLayout
                        android:id="@+id/growth_observation"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        >

                        <ImageView
                            android:id="@+id/img_growth_observation"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/crop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_growth_observation"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Growth Observation"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/dashboard_card_elevation">

                    <RelativeLayout
                        android:id="@+id/brix_percent"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        >

                        <ImageView
                            android:id="@+id/img_brix_percent"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_baseline_percent_24" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_brix_percent"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Brix Percent"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/dashboard_card_elevation">

                    <RelativeLayout
                        android:id="@+id/grower_meeting"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        >

                        <ImageView
                            android:id="@+id/img_grower_meeting"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/growerr" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_grower_meeting"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Grower Meeting"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>





</RelativeLayout>