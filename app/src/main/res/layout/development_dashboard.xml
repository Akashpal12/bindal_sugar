<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.grower.GrowerDevelopmentDashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/AppTheme.ToolbarFont">


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_image_with_alpha"
                    android:padding="15dp">


                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:alignContent="flex_start"
                        app:alignItems="flex_start"
                        app:flexWrap="wrap"
                        app:justifyContent="flex_start">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_wtpdwtpr"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:layout_weight=".3"
                                android:clickable="true"
                                app:cardBackgroundColor="@color/white"
                                android:onClick="openCaneDevelopment"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="37dp"
                                        android:src="@drawable/logo" />

                                    <TextView
                                        android:id="@+id/txt_wtpdwtpr"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_CANE_DEVEL"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/acc_details"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:layout_weight=".3"
                                android:clickable="true"
                                app:cardBackgroundColor="@color/white"
                                android:onClick="downloadStaffCaneMarketingDashboard"
                                android:src="@drawable/ic_baseline_ac_unit_24"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                tools:ignore="OnClick">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/survey" />

                                    <TextView
                                        android:id="@+id/txt_wtpswtpr"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_SURVEY"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_rptcpr"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:layout_weight=".3"
                                android:clickable="true"
                                app:cardBackgroundColor="@color/white"
                                android:onClick="downloadActivitySchedule"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                tools:ignore="OnClick">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/schedule" />

                                    <TextView
                                        android:id="@+id/txt_rptcpr"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_ACTIVITY_SCHEDULE"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_rpthcr"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:layout_weight=".3"
                                android:clickable="true"
                                android:onClick="downloadMasterData"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                tools:ignore="OnClick">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/ic_baseline_arrow_circle_down_24" />

                                    <TextView
                                        android:id="@+id/txt_rpthcr"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_IMPORT_EXPORT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_rptadaor"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:layout_weight=".3"
                                android:clickable="true"
                                android:onClick="openSupervisorAttendance"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/attendance" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_ATTENDANCE"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_weieght"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:layout_weight=".3"
                                android:clickable="true"
                                android:onClick="openReport"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"

                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/report" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/CANE_DEVELOPMRNT_REPORT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_Addmem"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="openaddmem"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/family" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_ADD_FAMILY_MEMBER"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>



                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_vehicle"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="openvehiclecollection"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/vehicle"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_VEHICLE_COLLECTION"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_document"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="opengrowerDocument"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/vehicle"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_GROWER_DOCUMENT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="SupervisorPerReport"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/report" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_SUPERVISER_PERFORMANCE_REPORT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="PlotActivitySummaryreport"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/summary" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_PLOT_ACTIVITY_SUM_REPORT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_S_P_Report"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="SuperviserAttendence"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/attendance" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_ATTENDANCE_REPORT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="SupervisorPerReport"
                                android:visibility="gone"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/report" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="Supervisor Performance Report"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="PocPlotReport"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                tools:ignore="OnClick">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/plotfinder" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_GIS_LEADS_PLOT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_S_P_Report"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="GisLeadsReport"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/report" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_GIS_LEADS_REPORT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:onClick="CrmSummaryReport"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true"
                                tools:ignore="OnClick">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/attendance" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_CRM_SUMMARY_REPORT"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:onClick="openLiveLocationData"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:src="@drawable/mapicon" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_black"
                                        android:gravity="center"
                                        android:text="@string/MENU_LIVE_LOCATION"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </com.google.android.flexbox.FlexboxLayout>


                </RelativeLayout>

            </ScrollView>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
