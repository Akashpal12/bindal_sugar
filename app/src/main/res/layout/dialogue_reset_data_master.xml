<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/roboto_black"
                    android:gravity="center"
                    android:text="Reset Database"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_baseline_close_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardElevation="@dimen/dashboard_card_elevation"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/reset_indenting"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        android:layout_weight=".3"
                        android:background="@color/lightgray"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/img_download_control"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_business_24" />

                        <TextView
                            android:id="@+id/download_control"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_download_control"
                            android:fontFamily="@font/roboto_black"
                            android:gravity="center"
                            android:text="@string/MENU_INDENTING"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    app:cardBackgroundColor="@color/lightgray"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardElevation="@dimen/dashboard_card_elevation"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/reset_planting"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        android:layout_weight=".3"
                        android:background="@color/lightgray"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <ImageView
                            android:id="@+id/img_download_village"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_card_travel_24" />

                        <TextView
                            android:id="@+id/download_village"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_download_village"
                            android:fontFamily="@font/roboto_black"
                            android:gravity="center"
                            android:text="@string/MENU_PLANTING"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    app:cardBackgroundColor="@color/lightgray"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardElevation="@dimen/dashboard_card_elevation"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/reset_survey"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        android:layout_weight=".3"
                        android:background="@color/lightgray"
                        android:fontFamily="@font/roboto_black"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <ImageView
                            android:id="@+id/img_download_master"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_supervisor_account_24" />

                        <TextView
                            android:id="@+id/download_master"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_download_master"
                            android:fontFamily="@font/roboto_black"
                            android:gravity="center"
                            android:text="@string/MENU_SURVEY"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    app:cardBackgroundColor="@color/form_bg"
                    app:cardCornerRadius="@dimen/dashboard_corner_radious"
                    app:cardElevation="@dimen/dashboard_card_elevation"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/reset_all_data"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        android:layout_weight=".3"
                        android:background="@color/lightgray"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <ImageView
                            android:id="@+id/img_download_farmer"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_person_pin_24" />

                        <TextView
                            android:id="@+id/download_farmer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_download_farmer"
                            android:fontFamily="@font/roboto_black"
                            android:gravity="center"
                            android:text="@string/MENU_ALL_DATA"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>