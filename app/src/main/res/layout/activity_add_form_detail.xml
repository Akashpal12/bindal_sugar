<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".view.supervisor.AddFormDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:theme="@style/AppTheme.ToolbarFont"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:id="@+id/rec_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/ll_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tv_Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/calibri"
                            android:textColor="@color/dark_gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_growerFatherName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/calibri"
                            android:padding="2dp"
                            android:textColor="@color/light_gray_text"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_growerCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/calibri"
                            android:padding="2dp"
                            android:textColor="@color/light_gray_text"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_growerUnitCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/calibri"
                            android:padding="2dp"
                            android:textColor="@color/light_gray_text"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/calibri"
                            android:padding="2dp"
                            android:textColor="@color/light_gray_text"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_VillagCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:padding="2dp"
                            android:fontFamily="@font/calibri"
                            android:textColor="@color/dark_gray"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_villageName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/calibri"
                            android:padding="2dp"
                            android:textColor="@color/light_gray_text"
                            android:textSize="10dp" />

                        <RelativeLayout
                            android:id="@+id/rl_photo_1"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_photo_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:text="@string/MENU_Photo"
                                android:textColor="@color/dark_gray"
                                android:textSize="15dp" />
                            <View
                                android:id="@+id/view_photo_1"
                                android:layout_below="@+id/tv_photo_1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/light_gray" />

                            <ImageView
                                android:id="@+id/iv_photo_1"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_below="@+id/view_photo_1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_baseline_person_outline_24" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_photo_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_photo_1"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tv_photo_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:text="@string/MENU_Document"
                                android:textColor="@color/dark_gray"
                                android:textSize="15dp" />

                            <View
                                android:id="@+id/view_photo_2"
                                android:layout_below="@+id/tv_photo_2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/light_gray" />

                            <ImageView
                                android:id="@+id/iv_photo_2"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_below="@+id/view_photo_2"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_baseline_image_24" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_signature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/light_gray"
                            android:layout_below="@+id/rl_photo_2"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tv_signature"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:text="@string/signature"
                                android:textColor="@color/dark_gray"
                                android:textSize="15dp" />

                            <View
                                android:id="@+id/view_signature"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/tv_signature"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/light_gray" />

                            <ImageView
                                android:id="@+id/iv_signature"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_below="@+id/view_signature"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/signature" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_thumb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:background="@color/light_gray"
                            android:layout_below="@+id/rl_signature"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tv_thumb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:text="@string/thumb"
                                android:textColor="@color/dark_gray"
                                android:textSize="15dp" />

                            <View
                                android:id="@+id/view_thumb"
                                android:layout_below="@+id/tv_thumb"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/light_gray" />

                            <ImageView
                                android:id="@+id/iv_thumb"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_below="@+id/tv_thumb"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_fingerprint" />

                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_next"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/rounded_button_green"
                            android:fontFamily="@font/calibri"
                            android:text="@string/MENU_Next"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>