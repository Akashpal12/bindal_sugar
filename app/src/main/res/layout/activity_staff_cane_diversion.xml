<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.supervisor.StaffCaneDiversion">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/AppTheme.ToolbarFont" />

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:id="@+id/rec_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="3dp">

                <RelativeLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_village_code"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/canearea_bg"
                        android:gravity="left"
                        android:textColor="@color/colorAccent">

                        <EditText
                            android:id="@+id/input_village_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="#00000000"
                            android:fontFamily="@font/calibri"
                            android:gravity="left"
                            android:hint="@string/LBL_VILLAGE_CODE"
                            android:inputType="number"
                            android:maxLength="6"
                            android:padding="5dp"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="#000"
                            android:textSize="15dp" />

                        <!-- <EditText
                             android:id="@+id/input_village_code"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:fontFamily="@font/roboto_black"
                             android:hint="Village Code"
                             android:inputType="number"
                             android:textColor="@color/colorAccent"
                             android:textSize="12dp"/>-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_village_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/input_layout_village_code"
                        android:background="@drawable/canearea_bg"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorAccent">

                        <EditText
                            android:id="@+id/input_village_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="#00000000"
                            android:editable="false"
                            android:fontFamily="@font/calibri"
                            android:gravity="left"
                            android:hint="@string/MENU_VILL_NAME"
                            android:inputType="none"
                            android:padding="5dp"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="#000"
                            android:textIsSelectable="false"
                            android:textSize="15dp" />

                        <!--  <EditText
                              android:id="@+id/input_village_name"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:editable="false"
                              android:fontFamily="@font/roboto_black"
                              android:hint="Village Name"
                              android:inputType="none"
                              android:textIsSelectable="false"
                              android:textSize="12dp" />
  -->
                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_grower_code"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/canearea_bg"
                        android:gravity="left"
                        android:textColor="@color/lightgray">

                        <EditText
                            android:id="@+id/input_grower_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="#00000000"
                            android:fontFamily="@font/calibri"
                            android:gravity="left"
                            android:hint="@string/LBL_GROWER_CODE"
                            android:inputType="number"
                            android:maxLength="6"
                            android:padding="5dp"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="#000"
                            android:textSize="15dp" />

                        <!-- <EditText
                             android:id="@+id/input_village_code"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:fontFamily="@font/roboto_black"
                             android:hint="Village Code"
                             android:inputType="number"
                             android:textColor="@color/colorAccent"
                             android:textSize="12dp"/>-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_grower_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/input_layout_grower_code"
                        android:background="@drawable/canearea_bg"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/input_grower_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="#00000000"
                            android:editable="false"
                            android:fontFamily="@font/calibri"
                            android:gravity="left"
                            android:hint="@string/MENU_GROWER_NAME"
                            android:inputType="none"
                            android:padding="5dp"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="#000"
                            android:textIsSelectable="false"
                            android:textSize="15dp" />

                        <!--  <EditText
                              android:id="@+id/input_village_name"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:editable="false"
                              android:fontFamily="@font/roboto_black"
                              android:hint="Village Name"
                              android:inputType="none"
                              android:textIsSelectable="false"
                              android:textSize="12dp" />
  -->
                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_grower_father"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/line2"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/canearea_bg"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/input_grower_father"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:background="#00000000"
                        android:editable="false"
                        android:fontFamily="@font/calibri"
                        android:gravity="left"
                        android:hint="@string/MENU_FATHER_NAME"
                        android:inputType="none"
                        android:padding="5dp"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="#000"
                        android:textIsSelectable="false"
                        android:textSize="15dp" />

                    <!--  <EditText
                          android:id="@+id/input_village_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:editable="false"
                          android:fontFamily="@font/roboto_black"
                          android:hint="Village Name"
                          android:inputType="none"
                          android:textIsSelectable="false"
                          android:textSize="12dp" />
-->
                </com.google.android.material.textfield.TextInputLayout>



                <RelativeLayout
                    android:id="@+id/rl_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_aadhar_number"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/canearea_bg">

                    <TextView
                        android:id="@+id/t_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="@string/MENU_CANETYPE"
                        android:textSize="13dp" />


                    <Spinner
                        android:id="@+id/cropcondition"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/t_category"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:hint="Select CaneType "
                        android:inputType="number"
                        android:textColor="#000"
                        android:textColorHint="#949494"
                        android:textSize="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_variety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_grower_father"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/canearea_bg">

                    <TextView
                        android:id="@+id/t_variety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="@string/MENU_Category" />

                    <Spinner
                        android:id="@+id/type_of_crop"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/t_variety"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:hint="Select Category"
                        android:textColor="#000"
                        android:textColorHint="#949494"
                        android:textSize="16dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/canearea_bg">

                    <TextView
                        android:id="@+id/t_irrigation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="@string/MENU_Variety" />

                    <Spinner
                        android:id="@+id/variety"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/t_irrigation"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:hint="Select Variety"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textColorHint="#949494"
                        android:textSize="16dp" />
                </RelativeLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/input_layout_manual_area"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/canearea_bg"
                    android:gravity="center_vertical"
                    android:padding="3dp">

                    <EditText
                        android:id="@+id/txt_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:background="#00000000"
                        android:editable="false"
                        android:fontFamily="@font/calibri"
                        android:gravity="left"
                        android:hint="@string/MENU_Quantity_Cane"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textColorHint="#949494"
                        android:textIsSelectable="false" />


                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:id="@+id/rl_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_quantity"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/canearea_bg">

                    <TextView
                        android:id="@+id/t_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="@string/MENU_Reason"
                        android:textSize="13dp" />


                    <Spinner
                        android:id="@+id/txt_reason"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/t_reason"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:hint="Select Crop Condition"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textColorHint="#949494"
                        android:textSize="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_kolh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_quantity"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/canearea_bg">

                    <TextView
                        android:id="@+id/t_kolh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="@string/MENU_Kolhu"
                        android:textSize="13dp" />


                    <Spinner
                        android:id="@+id/txt_kolh"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/t_kolh"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:hint="Select Kolhu"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textColorHint="#949494"
                        android:textSize="16dp" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rl_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/canearea_bg">

                    <TextView
                        android:id="@+id/t_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="@string/MENU_Vehicle_No" />

                    <EditText
                        android:id="@+id/txt_Vehicleno"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/t_remark"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:fontFamily="@font/calibri"
                        android:hint="@string/MENU_Enter_Vehicle_No"
                        android:inputType="textCapWords"
                        android:textColor="#000"
                        android:textColorHint="#949494"
                        android:textSize="16dp" />

                </RelativeLayout>
                <LinearLayout
                   android:id="@+id/ll_cane"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/canearea_bg"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/l_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l_issue_type"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:fontFamily="@font/calibri"
                        android:hint="@string/LBL_DESCRIPTION">

                        <EditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="top"
                            android:inputType="text|textMultiLine" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_image_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l_description"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@color/pink"
                        android:clickable="true"
                        android:fontFamily="@font/roboto_black"
                        android:onClick="openCam"
                        android:text="@string/BTN_CAPTURE_IMAGE"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.5"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:fontFamily="@font/roboto_black"
                        android:onClick="openRecorder"
                        android:text="@string/BTN_RECORD_VIDEO"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:text="@string/BTN_SAVE"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:clickable="true"
                    android:onClick="saveData"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/white"
                    android:background="@color/dark_green"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"/>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>